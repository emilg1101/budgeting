<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingTop="16dp"
    android:paddingEnd="16dp">

    <androidx.emoji.widget.EmojiTextView
        android:id="@+id/categoryEmoji"
        style="@style/EmojiTextView"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/emoji_icon_background"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="🍎" />

    <TextView
        android:id="@+id/categoryName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/categoryEmoji"
        app:layout_constraintStart_toEndOf="@id/categoryEmoji"
        app:layout_constraintTop_toTopOf="@id/categoryEmoji"
        tools:text="Coffee" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:background="#c4c4c4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categoryName" />

</androidx.constraintlayout.widget.ConstraintLayout>
